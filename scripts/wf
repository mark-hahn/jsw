#   -*-  grammar-ext: sh  -*-

function block_for_change {
  inotifywait -qe modify src/* scripts/run  \
    /root/dev/apps/UglifyJS2F/lib/output.js \
    /root/dev/apps/UglifyJS2F/lib/parse.js  \
    "test/code.jsw"
}
bash scripts/run -fm test/code
while block_for_change; do
  bash scripts/run -fm test/code
done