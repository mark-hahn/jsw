#   -*-  grammar-ext: sh  -*-

function block_for_change {
  inotifywait -qe modify src/* scripts/run  \
    /root/dev/apps/UglifyJS2T/lib/output.js \
    /root/dev/apps/UglifyJS2T/lib/parse.js  \
    "test/code.js"
}
bash scripts/run -tm test/code
while block_for_change; do
  bash scripts/run -tm test/code
done